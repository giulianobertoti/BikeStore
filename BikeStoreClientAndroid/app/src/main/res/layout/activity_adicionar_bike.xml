<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:id="@+id/btnAddBike"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtPreco"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btnAddBike"
        android:layout_alignStart="@+id/btnAddBike"
        android:hint="2500" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCor"
        android:layout_below="@+id/txtPreco"
        android:layout_alignRight="@+id/txtPreco"
        android:layout_alignEnd="@+id/txtPreco"
        android:layout_alignLeft="@+id/btnAddBike"
        android:layout_alignStart="@+id/btnAddBike"
        android:hint="Preto e Branco" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNumSerieDel"
        android:layout_below="@+id/txtCor"
        android:layout_alignLeft="@+id/btnAddBike"
        android:layout_alignRight="@+id/txtCor"
        android:layout_alignEnd="@+id/txtCor"
        android:hint="Ujh34fr5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtTamanho"
        android:layout_below="@+id/txtNumSerieDel"
        android:layout_alignLeft="@+id/txtNumSerieDel"
        android:layout_alignRight="@+id/txtNumSerieDel"
        android:hint="18" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMarca"
        android:layout_below="@+id/txtTamanho"
        android:layout_alignLeft="@+id/txtTamanho"
        android:layout_alignRight="@+id/txtTamanho"
        android:hint="SCOTT" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtAno"
        android:layout_below="@+id/txtMarca"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtRelacao"
        android:layout_alignStart="@+id/txtRelacao"
        android:hint="2015" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRelacao"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:hint="Deore" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSuspensao"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignRight="@+id/txtRelacao"
        android:layout_alignEnd="@+id/txtRelacao"
        android:layout_alignLeft="@+id/txtRelacao"
        android:layout_alignStart="@+id/txtRelacao"
        android:hint="Rock_Shox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preco:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cor:"
        android:id="@+id/textView2"
        android:layout_below="@+id/txtPreco"
        android:layout_alignLeft="@+id/textView"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Num Serie:  "
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/txtNumSerieDel"
        android:layout_alignLeft="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tamanho:"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/txtTamanho"
        android:layout_alignLeft="@+id/textView3"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Marca:"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/txtMarca"
        android:layout_alignLeft="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ano:"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/txtAno"
        android:layout_alignLeft="@+id/textView5"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Relacao:"
        android:id="@+id/textView7"
        android:layout_below="@+id/txtAno"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Suspensao:"
        android:id="@+id/textView8"
        android:textSize="22dp"
        android:layout_below="@+id/txtRelacao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>