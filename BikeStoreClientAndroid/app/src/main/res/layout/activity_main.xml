<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center">

        <Button
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:text="Adicionar Bike"
            android:id="@+id/btnAddBike"
            android:layout_gravity="left|top"
            android:onClick="showAddBike"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:text="Consultar"
            android:id="@+id/btnConsultarBikes"
            android:layout_gravity="right|top"
            android:onClick="showConsultarBike"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:text="Deletar"
            android:id="@+id/btnDelete"
            android:layout_gravity="left|center_vertical"
            android:onClick="showDeletarBike"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:text="Alterar Bike"
            android:id="@+id/btnAlterar"
            android:layout_gravity="right|center_vertical"
            android:onClick="showAlterarBike"/>
    </FrameLayout>
</RelativeLayout>
